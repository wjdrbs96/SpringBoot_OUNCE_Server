<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.gyun.ounce.mapper.UserMapper">
    <!-- ID로 유저 찾기 -->
    <select id="findById" resultType="UserDto">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!-- 회원가입  -->
    <insert id="userInsert" useGeneratedKeys="true" keyProperty="user.userIdx">
        INSERT INTO user (id, password, email) VALUES (#{user.id}, #{user.password}, #{user.email})
    </insert>

    <!--  userIdx로 유저찾기   -->
    <select id="findByUserIdx" resultType="UserDto">
        SELECT * FROM user WHERE userIdx = #{userIdx}
    </select>

    <select id="checkByLoginId" resultType="int">
        SELECT count(userIdx) FROM user WHERE id = #{id};
    </select>

    <select id="userProfileCount" resultType="ProfileCountDto">
        SELECT profileIdx, count(profileIdx) as userProfileCount FROM profile WHERE userIdx = #{userIdx}
    </select>
</mapper>